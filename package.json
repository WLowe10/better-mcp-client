{
	"name": "@better-mcp/client",
	"type": "module",
	"scripts": {
		"build": "tsup",
		"test": "vitest run",
		"test-watch": "vitest watch",
		"test-coverage": "vietst run --coverage",
		"typecheck": "tsc --noEmit",
		"schema:generate-types": "json2ts -i ./schemas/mcp.json -o ./src/generated/types.ts --unreachableDefinitions",
		"schema:generate-validators": "tsx ./scripts/compile-validators.ts"
	},
	"files": [
		"package.json",
		"dist"
	],
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		},
		"./http": {
			"import": {
				"types": "./dist/http/index.d.ts",
				"default": "./dist/http/index.js"
			},
			"require": {
				"types": "./dist/http/index.d.cts",
				"default": "./dist/http/index.cjs"
			}
		},
		"./stdio": {
			"import": {
				"types": "./dist/stdio/index.d.ts",
				"default": "./dist/stdio/index.js"
			},
			"require": {
				"types": "./dist/stdio/index.d.cts",
				"default": "./dist/stdio/index.cjs"
			}
		}
	},
	"dependencies": {
		"cross-spawn": "^7.0.6"
	},
	"peerDependencies": {
		"axios": "^1.0.0"
	},
	"peerDependenciesMeta": {
		"axios": {
			"optional": true
		}
	},
	"devDependencies": {
		"@types/cross-spawn": "^6.0.6",
		"@vitest/coverage-v8": "3.2.4",
		"ajv": "^8.17.1",
		"ajv-cli": "^5.0.0",
		"axios": "^1.11.0",
		"json-schema-to-typescript": "^15.0.4",
		"prettier": "^3.6.2",
		"tsup": "^8.5.0",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	}
}
